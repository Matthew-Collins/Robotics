Public Sub SetUp(Pin As Integer, Direction As Integer)
  Select Case Direction
    Case {In}
        Exec ["gpio", "mode", Str(Pin), "in"] Wait
    Case Out
        Exec ["gpio", "mode", Str(Pin), "out"] Wait
  End Select

End Sub

Public Function PWM(Pin As Integer, Frequency As Integer) As PWM
  Dim p As New PWM 
  p.Pin = Pin
  p.Frequency = Frequency
  Exec ["gpio", "mode", Str(Pin), "pwm"] Wait
  Return p
End

