End Sub
Public Sub ChangeDutyCycle(Value As Integer)
  Me.Value = Value
  Exec ["gpio", "pwm", Str(Pin), Str(Value)] Wait
End Sub
Public Sub ChangeFrequency(Frequency As Integer)
 Me.Timer.Delay = Frequency
End Sub
Public Sub Timer_Timer()
 If Me.IsOn Then
    Me.IsOn = False
    ChangeDutyCycle(0)
 Else
    Me.IsOn = True
    ChangeDutyCycle(Me.Value)
 End If
End Sub

