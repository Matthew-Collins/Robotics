Public Trim0 As Integer = 10
Public Trim1 As Integer = 40
Public Sub _new()
End
Public Sub Form_Open()
End
Public Sub Servo(No As Integer, Degrees As Integer)
 'Degrees Between -90 and 90
 'Range Between 150 and 600
 Dim Range As Integer
 Range = ((Degrees + 90) / 180 * (600 - 150)) + 150
 Shell "cd " & User.Home &/ "robot" &/ " && " & " sudo python servo.py" & " -s " & Str(14 + No) & " -p " & Str(Range) & " -d " & Str(1)
End

Public Sub ButtonCenterLeftRight_Click()
 Servo(1, 0 + Trim1)
End
Public Sub ButtonLeft_Click()
 Servo(1, 90 + Trim1)
End
Public Sub ButtonRight_Click()
 Servo(1, -90 + Trim1)
End

Public Sub ButtonCenterUpDown_Click()
 Servo(0, 0 + Trim0)
End
Public Sub ButtonUp_Click()
 Servo(0, -90 + Trim0)
End
Public Sub ButtonDown_Click()
 Servo(0, 90 + Trim0)
End
