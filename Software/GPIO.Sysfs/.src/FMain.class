Public Sub Form_Open()
  Dim x As Integer

  Dim Pin As New GPIO_Sysfs_Pin(20)
  Pin.SetDirection(True)
  Pin.SetValue(True)
  Sleep 2
  'Pin.SetValue(False)
  Pin.SetDirection(False)
  For x = 1 To 100
    Print Timer & " - " & If(Pin.GetValue(), "True", "False")
  Next
  Pin.Close

End
